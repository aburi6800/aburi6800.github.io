{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Jekyll Start",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec",
                "jekyll",
                "serve"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Jekyll Build",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec",
                "jekyll",
                "build",
                "JEKYLL_ENV=production"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Jekyll Clean",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec",
                "jekyll",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
  